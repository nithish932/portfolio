<%- include("partials/header.ejs") -%> 

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2><%= project.title %> </h2>
          <ol>
            <li><a href="/">Home</a></li>
            <li>Portfoio Details</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
      <div class="container">

        <div class="row gy-4">

          <div class="col-lg-8">
            <div class="portfolio-details-slider swiper">
              <div class="swiper-wrapper align-items-center">

                <% project.imageurls.forEach(function(image){ %> 
                  <% if(project.isPortright){ %> 
                    <div class="swiper-slide" style="text-align: center;">
                      <img src=<%=image%> alt="" height="450px" width="47%">
                    </div>
                    <% }else{ %> 
                <div class="swiper-slide">
                  <img src=<%=image%> alt="" height="100%" width="100%">
                </div><% } %> 
                <% }); %> 
              </div>
              <div class="swiper-pagination"></div>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="portfolio-info">
              <h3>Project information</h3>
              <ul>
                <li><strong>Category</strong>: <%= project.category %> </li>
                <li><strong>technology</strong>: <%= project.technology %> </li>
                <!-- <li><strong>Project date</strong>: 01 March, 2020</li>
                <li><strong>Project URL</strong>: <a href="#">www.example.com</a></li> -->
              </ul>
            </div>
            <div class="portfolio-description">
              <h2><%= project.title %>  details</h2>
              <% project.description.forEach(function(des){%> 
              <p><%= des %> </p>
              <% }); %> 
            </div>
          </div>

        </div>

      </div>
    </section><!-- End Portfolio Details Section -->

  </main><!-- End #main -->

  <%- include("partials/footer.ejs") -%> 